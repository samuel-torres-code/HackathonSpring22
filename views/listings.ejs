<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Listings</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.3/css/bulma.min.css">
    
    <style>
      .button {
          background-color: #E4DEAE;
          border: 5px solid #000000;
          color: white;
          padding: 0px 60px;
          text-decoration: none;
          display: inline-block;
          font-size: 40px;
          margin: 4px 2px;
          transition-duration: 0.3s;
          cursor: pointer;
          font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif
      }
      .row {
      display: inline;
        float: left;
      }
      .button1 {
          background-color: #E4DEAE; 
          color: black; 
          border: 4px solid #000000;
          border-radius: 32px;
          align-self: flex-end;
      }
      .button1:hover {
          background-color: #000000;
          color: white;
      }

      .button2 {
          background-color: #E4DEAE;
          border: 5px solid #000000;
          padding: 0px 60px;
          text-decoration: none;
          display: inline-block;
          font-size: 30px;
          margin: 4px 2px;
          transition-duration: 0.3s;
          cursor: pointer;
          font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif
      }
      .center {
          display: flex;
          justify-content: center;
          align-items: center;
          height: 200px;
       }
       .inputText {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif,
        font-size:15px
       }
      .wrapper {
          display: grid;
          grid-template-columns: repeat(3, 1fr);
          gap: 10px;
          overflow-y: scroll;
          height: 85vh
      }

      @media screen and (max-width: 1080px) {
        .wrapper {
          display: grid;
          
          grid-template-columns: repeat(1, 1fr);
          overflow-y: scroll;
          height: 85vh
        }
      }

      .square {
        height: 300px;
        width: 300px;
        background-color: #E4DEAE;
        border: 5px solid #000000;
        border-radius: 12px;
        text-align: center;
        font-size: 25px;
        
      }
      html, body {
            height: 100%;
        }
      h1 {
        text-align: center;
        font-size:40px
      }

      h2 {
        text-align: center;
        font-size:25px
      }
      /* Style the form - display items horizontally */
        .inline-block {
        display: flex;
        flex-flow: row wrap;
        align-items: center;
        height: 15vh;
        }
        #zip_code {
            vertical-align: middle;
        }
        .right {
        position: absolute;
        right: 0px;
        width: 250px;
        
      }
        

    </style>
</head>

<body style="background-color:#133A1B;">
    <div class="inline-block">
        <form class="form-inline" >
        
            
      <input type="number" class="inputText" id="zip_code" placeholder="enter zip code" name="zip_code">
            
      <button id="btn" class="button1 button2" >filter</button>
          </form> 
    
            <div class="right">
            <a href="/post">
          <button class="button button1">post</button>
        </a>
      </div>
    </div>
    
        

      
    

    <div class="wrapper">
        <% data.forEach((listing) => { %>
      <div class = "square">
        <h1 ><%= listing.title %></h1>
        <h2><%= listing.description %></h2>
        <img src="uploads/<%= listing.imageName %>"
              width="600"
              height="150"
              style="width: 280px; height: 150px; object-fit: cover;"   
        />
        
        <%= listing.zip_code %>
        <%= listing.location %>


      </div>
      <% }) %>
    </div>
      <!-- Code to interact with the backend -->
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
      <script>
          const handleSubmit = (ev) => {
            ev.preventDefault();
            
            let formData = {
                zip_code: document.getElementById('zip_code') ? document.getElementById('zip_code').value :0
            };

            console.log(formData['zip_code'])
            axios.post('/listings', {
                zip_code: formData['zip_code']
            })
            .then(function (response) {
                
                window.location = "/listings"
            
            })
            .catch(function (error) {
                console.log(error);
            });
            
        

            console.log(formData);
        }

        document.addEventListener('DOMContentLoaded', () => {
            document.getElementById('btn').addEventListener('click', handleSubmit);
        });
      </script>
    
</body>
</html>